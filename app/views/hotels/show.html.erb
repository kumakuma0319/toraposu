<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <div class="item-img-content">
      <%= image_tag @hotel.image ,class:"item-box-img" %>
    </div>
   

    <%# ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>
 <% if user_signed_in? %>
  <% if current_user.id == @hotel.user_id  %>
    <%= link_to "編集", edit_hotel_path(@hotel.id), method: :get, class: "item-red-btn" %>
     <%= link_to "削除", hotel_path(@hotel.id), method: :delete, class:"item-destroy" %>
  <% end %>
<% end %>


    <%# //ログインしているユーザーと出品しているユーザーが、同一人物の場合と同一人物ではない場合で、処理を分けましょう %>

    <div class="item-explain-box">
      <span><%= "投稿者と宿の詳細情報" %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">宿名</th>
          <td class="detail-value"><%= @hotel.name %></td>
        </tr>
         <tr>
          <th class="detail-item">住所</th>
          <td class="detail-value"><%= @hotel.adress %></td>
        </tr>
         <tr>
          <th class="detail-item">予算</th>
          <td class="detail-value"><%= "1泊一人当たり#{@hotel.price}円" %></td>
        </tr>
        <tr>
          <th class="detail-item">宿の設備</th>
          <td class="detail-value"><%= @hotel.facilities %></td>
        </tr>
         <th class="detail-item">チェックイン時刻</th>
          <td class="detail-value"><%= "#{@hotel.check_in_hour}:#{@hotel.check_in_minutes}" %></td>
        </tr>
         <th class="detail-item">チェックアウト時刻</th>
          <td class="detail-value"><%= "#{@hotel.check_out_hour}:#{@hotel.check_out_minutes}" %></td>
        </tr>
          <% if @hotel.others_infomation.present? %>
          <tr>
          <th class="detail-item">その他の情報</th>
          <td class="detail-value"><%= @hotel.others_infomation %></td>
        </tr>
        <% end %>
         <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @hotel.user.nickname %></td>
        </tr>

      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
     
    </div>
  </div>
</div>
  <%# /商品の概要 %>

 <%#コメント機能はここ%>
<%= render "shared/footer" %>
